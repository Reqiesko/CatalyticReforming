                    <!--     Margin="0 20 0 0" -->
                    <!--     HorizontalAlignment="Center" -->
                    <!--     Content="Исследование" -->
                    <!--     Command="{Binding OpenResearchPageCommand}" /> -->
                </Grid>
            </Grid>

</UserControl>
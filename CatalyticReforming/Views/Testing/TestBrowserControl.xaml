<UserControl x:Class="CatalyticReforming.Views.Testing.TestBrowserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CatalyticReforming.Views.Testing"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <ListView />
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Orientation="Horizontal">
                <ui:Button Appearance="Info" Content="Изменить" Margin="5,0"/>
                <ui:Button Appearance="Success" Content="Добавить" Margin="5,0"/>
                <ui:Button Appearance="Danger" Content="Удалаить" Margin="5,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
